<h1>Listing plays</h1>

<table>
  <tr>
    <th>Table</th>
    <th>Starts at</th>
    <th>Ends at</th>
    <th>Note</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @plays.each do |play| %>
  <tr>
    <td><%= play.table_id %></td>
    <td><%= play.starts_at %></td>
    <td><%= play.ends_at %></td>
    <td><%= play.note %></td>
    <td><%= link_to 'Show', play %></td>
    <td><%= link_to 'Edit', edit_play_path(play) %></td>
    <td><%= link_to 'Destroy', play, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

